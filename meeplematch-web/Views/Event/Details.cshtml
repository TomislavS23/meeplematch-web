@model meeplematch_web.Models.EventViewModel
@{
    ViewData["Title"] = "Details";
}

<div class="container my-5">
    <h2 class="mb-4">Event Details</h2>

    <div class="row justify-content-center align-items-center mb-4">
        <div class="col-md-4">
            <img src="@(!string.IsNullOrEmpty(Model.ImagePath) ? Model.ImagePath : Url.Content("~/assets/images/game_night_placeholder.png"))"
                    alt="Event Image" class="img-thumbnail shadow"
                    style="width: 100%; max-width: 400px; height: 300px; object-fit: cover;" />
        </div>

        <div class="col-md-6 text-center">
            <div class="mb-2"><strong>Title:</strong> @Model.Name</div>
            <div class="mb-2"><strong>Game:</strong> @Model.Game</div>
            <div class="mb-2"><strong>Type:</strong> @Model.Type</div>
            <div class="mb-2"><strong>Location:</strong> @Model.Location</div>
            <div class="mb-2"><strong>Date & Time:</strong> @Model.EventDate.ToString("f")</div>
            <div class="mb-2"><strong>Min Participants:</strong> @Model.MinParticipants</div>
            <div class="mb-2"><strong>Max Participants:</strong> @Model.Capacity</div>
            <div class="mb-2"><strong>Created By:</strong> @(Model.CreatedByNavigation?.Username ?? "Unknown")</div>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.Description))
    {
        <div class="row justify-content-center mb-4">
            <div class="col-md-8">
                <h5 class="text-center">Description</h5>
                <div class="p-3">
                    @Html.Raw(Model.Description.Replace("\n", "<br />"))
                </div>
            </div>
        </div>
    }

    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model.IdEvent" class="btn btn-info">Edit</a>
        <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
    </div>
</div>