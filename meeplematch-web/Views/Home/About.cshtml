@{
    ViewData["Title"] = "About";
}

@section Styles {
    <style>
        #faqAccordion .accordion-button,
        #faqAccordion .accordion-body {
            font-family: 'Fredoka', sans-serif;
        }
    </style>
}

<div class="bg-gradient bg-danger text-white py-5 w-100 shadow-sm" data-aos="fade-up" data-aos-duration="1000">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 text-center text-md-start">
                <h1 class="display-4 mb-4">Hello! Nice to meet you!</h1>
                <p class="lead mx-auto mx-md-0" style="max-width: 800px;">
                    MeepleMatch is a student-built platform to bring board game lovers together.
                    Organize tabletop events, invite friends, track your game history, and never lose your meeples again!
                </p>
            </div>

            <div class="col-md-6 mb-4 mb-md-0 d-flex justify-content-center">
                <div>
                    <lottie-player src="@Url.Content("~/assets/json/controller_lottie.json")"
                                   background="transparent"
                                   speed="1"
                                   style="width: 100%; max-width: 300px; height: auto;"
                                   loop
                                   autoplay>
                    </lottie-player>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="bg-dark text-white d-flex justify-content-center align-items-center" style="height: 150px;"
     data-aos="fade-up" data-aos-duration="1000">
    <p class="display-6 text-center">Rolling the dice is just the start.</p>
</div>

<div class="w-100 overflow-hidden" style="position: relative; height: 700px;"
     data-aos="fade-up" data-aos-duration="1000">
    <video autoplay muted loop playsinline
            style="width: 100%; height: 100%; object-fit: cover; position: absolute; top: 0; left: 0;">
        <source src="@Url.Content("~/assets/videos/rolling_dice_video.mp4")" type="video/mp4">
        Your browser does not support the video tag.
    </video>
</div>

<div class="bg-dark text-white d-flex justify-content-center align-items-center" style="height: 150px;"
     data-aos="fade-up" data-aos-duration="1000">
    <h4 class="display-6 text-center">MeepleMatch helps you bring game nights to life.</h4>
</div>

<div id="carouselAbout" class="carousel slide" data-bs-ride="carousel"
     data-aos="fade-up" data-aos-duration="1000">
    <div class="carousel-inner rounded shadow">
        <div class="carousel-item active">
            <img src="~/assets/images/game5.jpg" class="d-block w-100 carousel-img" alt="playing figure near dices">
        </div>
        <div class="carousel-item">
            <img src="~/assets/images/game6.png" class="d-block w-100 carousel-img" alt="table with cards in a circle">
        </div>
        <div class="carousel-item">
            <img src="~/assets/images/game7.png" class="d-block w-100 carousel-img" alt="hands holding cards">
        </div>            
        <div class="carousel-item">
            <img src="~/assets/images/game.8.png" class="d-block w-100 carousel-img" alt="table with boardgame cards">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselAbout" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselAbout" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
    </button>
</div>

<div class="bg-dark text-white d-flex justify-content-center align-items-center" style="height: 150px;"
     data-aos="fade-up" data-aos-duration="1000">
    <h4 class="display-6 text-center">Make your next board game night unforgettable.</h4>
</div>

<div class="bg-danger w-100 py-5" data-aos="fade-up" data-aos-duration="1000">
    <div class="container">
        <h2 class="text-white mb-4" style="font-weight: normal;">FAQ</h2>

        <div class="accordion" id="faqAccordion">
            <div class="accordion-item text-dark">
                <h2 class="accordion-header" id="faq1">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse1">
                        What is MeepleMatch?
                    </button>
                </h2>
                <div id="collapse1" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        MeepleMatch is a student-built platform that helps board game enthusiasts connect, organize events, and track game nights.
                    </div>
                </div>
            </div>

            <div class="accordion-item text-dark">
                <h2 class="accordion-header" id="faq2">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse2">
                        How do I join a game night?
                    </button>
                </h2>
                <div id="collapse2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Register an account, browse upcoming events, and click “Participate” to join.
                    </div>
                </div>
            </div>

            <div class="accordion-item text-dark">
                <h2 class="accordion-header" id="faq3">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse3">
                        Is MeepleMatch free to use?
                    </button>
                </h2>
                <div id="collapse3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Absolutely! MeepleMatch is free for all users.
                    </div>
                </div>
            </div>

            <div class="accordion-item text-dark">
                <h2 class="accordion-header" id="faq4">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse4">
                        Can I invite friends who aren't registered?
                    </button>
                </h2>
                <div id="collapse4" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Yes! You can share public event links, but registration is required to RSVP.
                    </div>
                </div>
            </div>

            <div class="accordion-item text-dark">
                <h2 class="accordion-header" id="faq5">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse5">
                        How do I delete my account?
                    </button>
                </h2>
                <div id="collapse5" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Go to your profile settings and click “Delete My Account” to exercise your right to be forgotten.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

